<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title && post.translator){ %>
  <% if (index){ %>
    <h1 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
  <ul>
    <li>작성자: <strong><%- post.author %></strong></li>
    <li>
      원문: <strong><a href="<%= post.refurl %>" taret="_blank">
        <%= post.ref %>
      </a></strong>
    </li>
    <li>
      번역:
      <%- link_to_github(post.translator) %>
    </li>
  </ul>
<% } %>
